{
	"compilerOptions": {
		"target": "es2024",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleDetection": "auto",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@graphql/*": ["graphql/*"],
			"@server/*": ["server/*"],
			"@utils/*": ["utils/*"]
		},
		"typeRoots": ["./_types"]
	},

	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		},
		"require": ["tsconfig-paths/register"]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "./*-loader.js", "dist", "build-sea.js"]
}

{
	"name": "obs-gm-overlay",
	"version": "0.1.9",
	"private": true,
	"scripts": {
		"dev": "run-p dev:*",
		"dev:backend": "nodemon server/index.ts",
		"dev:frontend": "vite",
		"build": "run-s build:*",
		"build:clean": "rimraf dist",
		"build:frontend": "vite build",
		"build:backend": "rollup -c rollup.config.js --bundleConfigAsCjs",
		"build:sea": "node build-sea.js",
		"start": "NODE_ENV=production PORT=3000 node dist/server.js",
		"lint": "run-s eslint prettier",
		"lint:fix": "run-s eslint:fix prettier:fix",
		"eslint": "eslint --cache .",
		"eslint:fix": "eslint --cache --fix .",
		"prettier": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"generate-types": "graphql-codegen --config codegen.yml",
		"typecheck": "tsc",
		"prepare": "husky install",
		"db-up": "docker-compose -f local-db-compose.yml up -d",
		"db-down": "docker-compose -f local-db-compose.yml down"
	},
	"dependencies": {
		"@apollo/client": "^3.13.8",
		"@apollo/server": "^5.0.0",
		"@as-integrations/express5": "^1.1.2",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@graphql-tools/schema": "^10.0.25",
		"@graphql-tools/utils": "^10.9.1",
		"@mui/icons-material": "^7.2.0",
		"@mui/material": "^7.2.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"formik": "^2.4.6",
		"framer-motion": "^12.23.9",
		"graphql": "^16.11.0",
		"graphql-subscriptions": "^3.0.0",
		"graphql-ws": "^6.0.6",
		"lodash": "^4.17.21",
		"open": "^10.2.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router-dom": "^7.7.1",
		"react-use": "^17.6.0",
		"ws": "^8.18.3",
		"yup": "^1.6.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@graphql-codegen/add": "^5.0.3",
		"@graphql-codegen/cli": "^5.0.7",
		"@graphql-codegen/introspection": "^4.0.3",
		"@graphql-codegen/typescript": "^4.1.6",
		"@graphql-codegen/typescript-operations": "^4.6.1",
		"@graphql-codegen/typescript-react-apollo": "^4.3.3",
		"@graphql-codegen/typescript-resolvers": "^4.5.1",
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-replace": "^6.0.2",
		"@rollup/plugin-typescript": "^12.1.4",
		"@types/express": "^5.0.3",
		"@types/lodash": "^4.17.20",
		"@types/node": "^24.1.0",
		"@types/portscanner": "^2.1.4",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"@vitejs/plugin-react": "^4.7.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"extract-zip": "^2.0.1",
		"fast-glob": "^3.3.3",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"nodemon": "^3.1.10",
		"npm-run-all": "^4.1.5",
		"portscanner": "^2.2.0",
		"postject": "^1.0.0-alpha.6",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"rollup": "^4.45.3",
		"tar": "^7.4.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3",
		"vite": "^7.0.6",
		"vite-plugin-checker": "^0.10.1",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json}": "eslint --cache --fix",
		"*.{ts,tsx,js,jsx,css,md}": "prettier --write"
	}
}
